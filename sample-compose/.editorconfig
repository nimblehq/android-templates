root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 100
ktlint_standard_max_line_length = 100
ktlint_function_naming_ignore_when_annotated_with = Composable

ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_imports_layout=*,android.,androidx.,com.,org.,java.,kotlin.,^
ij_kotlin_blank_lines_around_declarations_in_class_body = 1
ij_kotlin_blank_lines_before_package = 0
ij_kotlin_blank_lines_after_package = 1
ij_kotlin_blank_lines_before_imports = 1
ij_kotlin_blank_lines_after_imports = 1

ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_final-newline = enabled
ktlint_standard_filename = enabled
ktlint_standard_multiline-expression-wrapping = disabled
ktlint_standard_string-template-indent = disabled
ktlint_standard_annotation = disabled
ktlint_standard_class-signature = disabled

[**/build/**/*.kt]
ktlint = disabled

[**/src/test/**/*.kt]
ktlint = disabled
